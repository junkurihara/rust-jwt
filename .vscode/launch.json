  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'rjwt'",
      "cargo": {
        "args": [
          "build",
          "--bin=rjwt",
          "--package=rjwt"
        ],
        "filter": {
          "name": "rjwt",
          "kind": "bin"
        }
      },
      "env": {
        "RUST_LOG": "debug"
      },
      "args": [
        "--claim-path=../sample_claim.json",
        "--add-iat",
        "--expires-in=3",
        "--algorithm=ES256",
        "--signing-key-path=../secret_key_es256.example",
        "--validation-key-path=../public_key_es256.example",
        // "test_subject"
      ],
      "cwd": "${workspaceFolder}/.private"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'rjwt'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=rjwt",
          "--package=rjwt"
        ],
        "filter": {
          "name": "rjwt",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
